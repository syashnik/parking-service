{
  "compilerOptions": {
    "target": "ES2020",                      
    "module": "commonjs",                    
    "outDir": "./dist",                      
    "rootDir": "./src",                      
    "strict": true,                          
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                    
    "experimentalDecorators": true,          
    "emitDecoratorMetadata": true,           
    "strictNullChecks": true,                
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
